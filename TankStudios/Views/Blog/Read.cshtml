@model TankStudios.Models.BlogModel

@{
    ViewBag.Title = Model.Title;
}

<header>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <img class="img-responsive img-circle" src="@Model.ImageLink" alt="">
                <div class="intro-text">
                    <span class="name">@Model.Title</span>
                    <hr>
                    <span class="skills">@Model.SubTitle</span><br />
                </div>
            </div>
        </div>
    </div>
</header>
<section>
    <div class="container">
        @{int count = 0; }

        @foreach (var post in Model.Posts)
        {
            <a style="color: black;" href="@Url.Action(controllerName: "Blog", actionName: "ReadPost", routeValues: new { id = post.Id })">
                <div class="row" style="border: groove; cursor: pointer;">
                    <div class="col-xs-12" style="text-align: center;">
                        <h1>@post.Title</h1>
                        <hr style="background-color:black; color:black; height:1pt; border:hidden;" />
                    </div>
                    <div class="col-xs-12">
                        <img style="height: 200px; width:200px; margin-left:auto; margin-right: auto; display: block;" src="@Model.ImageLink" alt="">
                    </div>
                    <div class="col-xs-12" style="text-align: center; margin-top: 10px;">
                        <p style="font-size: 22pt;">@post.SubTitle</p>
                    </div>
                </div>
            </a>
        }
    </div>
</section>
