@model TankStudios.Models.BlogModel

@{
    ViewBag.Title = Model.Title;
}

<header>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <img class="img-responsive img-circle" src="@Model.ImageLink" alt="">
                <div class="intro-text">
                    <span class="name">@Model.Title</span>
                    <hr>
                    <span class="skills">@Model.SubTitle</span><br />
                </div>
            </div>
        </div>
    </div>
</header>
<section>
    <div class="container">
        @{int count = 0; }

        @foreach (var post in Model.Posts.OrderByDescending(p => p.DatePosted))
        {
            <div style="margin-bottom: 50px; border: groove;">
                <a style="color: black; margin-bottom: 50px;" href="@Url.Action(controllerName: "Blog", actionName: "ReadPost", routeValues: new { id = post.Id })">
                    <div class="row">
                        <div class="col-xs-12" style="text-align: center;">
                            <h1>@post.Title</h1>
                            <p>@post.DatePosted.ToString("MMMM dd, yyyy")</p>
                            <hr style="background-color:gray; color:gray; height:1pt; border:hidden;" />
                        </div>
                        <div class="col-xs-12">
                            <img style="height: 300px; width:300px; margin-left:auto; margin-right: auto; display: block;" src="@post.ImageLink" alt="">
                        </div>
                        <div class="col-xs-12" style="text-align: center; margin-top: 10px;">
                            <p style="font-size: 22pt;">@post.SubTitle</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</section>
